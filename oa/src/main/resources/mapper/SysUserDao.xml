<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsy.oa.dao.SysUserDao">

    <resultMap type="com.tsy.oa.entity.SysUser" id="SysUserMap">
        <id property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="uCode" column="u_code" jdbcType="VARCHAR"/>
        <result property="uName" column="u_name" jdbcType="VARCHAR"/>
        <result property="uPass" column="u_pass" jdbcType="VARCHAR"/>
        <result property="isdisabled" column="isdisabled" jdbcType="INTEGER"/>
        <association property="dept" javaType="com.tsy.oa.entity.Dept">
            <id property="deptid" column="deptid" jdbcType="INTEGER"/>
            <result property="dname" column="dname" jdbcType="VARCHAR"/>
        </association>
    </resultMap>

    <select id="queryUserIdByUserName" resultType="java.lang.String">
        select uid
        from sys_user
        where u_name=#{userName}
    </select>

    <select id="selectUserByName" resultMap="SysUserMap">
    select * from sys_user where u_name =#{username}
  </select>

<!-- 查询用户信息-->
    <select id="selectSysUser" resultMap="SysUserMap">
        select * from sys_user u
        left join dept d on u.deptid=d.deptid
        order by u.uid
    </select>

    <!--高级查询-->
    <select id="selectBylikeSysUser" resultMap="SysUserMap">
        select * from sys_user u
        left join dept d on u.deptid=d.deptid
        <where>
            <if test="uCode!=null || uCode!=''">
                and u.u_code like concat('%',#{uCode},'%')
            </if>
            <if test="uName!=null and uName!=''">
                and u.u_name like concat('%',#{uName},'%')
            </if>
            <if test="dname!=null || dname!=''">
                and d.dname like concat('%',#{dname},'%')
            </if>
            <if test="isdisabled!=null || isdisabled!=''">
                and u.isdisabled like concat('%',#{isdisabled},'%')
            </if>
        </where>
        order by u.uid
    </select>

<!--    新增用户-->
    <insert id="insertSysUser" parameterType="com.tsy.oa.entity.SysUser" useGeneratedKeys="true" keyProperty="uid">
        insert into sys_user(u_code,u_name,u_pass,deptid,isdisabled)
        values (#{u_code},#{u_name},#{u_pass},#{deptid},#{isdisabled})
    </insert>
</mapper>

