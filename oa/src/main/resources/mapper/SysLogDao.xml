<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsy.oa.dao.SysLogDao">

    <resultMap id="logMap" type="com.tsy.oa.vo.SysLogVo">
        <id column="log_id" property="logId" javaType="String"></id>
        <result column="create_time" property="createTime" javaType="java.sql.Timestamp"></result>
        <result column="operation" property="operation" javaType="String"></result>
        <result column="ipaddress" property="ipaddress" javaType="String"></result>
        <result column="change_info" property="changeInfo" javaType="String"></result>
        <result column="operation_result" property="operationResult" javaType="String"></result>
        <association property="user" javaType="com.tsy.oa.entity.SysUser">
            <id column="uid" property="uid" javaType="String"></id>
            <result column="u_name" property="uName" javaType="String"></result>
        </association>
    </resultMap>

    <insert id="addSysLog" parameterType="com.tsy.oa.entity.Log">
        insert into sys_log values (#{logId},#{createTime},#{uId},#{operation},#{ipaddress}
        ,#{changeInfo},#{operationResult})
    </insert>

    <select id="findAllLog" resultMap="logMap">
        select l.*,u.u_name from sys_log l,sys_user u
        where l.uid=u.uid
    </select>
</mapper>